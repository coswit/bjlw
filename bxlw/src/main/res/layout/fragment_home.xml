<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:layout_height="match_parent"
                                          android:background="@color/defaul_bg"
                                          android:orientation="vertical">

    <LinearLayout
        android:id="@id/id_stickynavlayout_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <coswit.com.github.bxlw.view.AutoScrollViewPager
                android:id="@+id/vp_banner_homeFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/vp_banner_homeFragment"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/ll_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <GridView
            android:id="@+id/gv_home"
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="180dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ad_logo"/>

            <coswit.com.github.bxlw.widget.UpDownViewFlipper
                android:id="@+id/flipper_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </coswit.com.github.bxlw.widget.UpDownViewFlipper>

        </LinearLayout>
        <View
            android:background="@color/defaul_bg"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@id/id_stickynavlayout_indictor"
        style="@style/MyTabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabMode="fixed"/>

    <include layout="@layout/default_line"/>

    <android.support.v4.view.ViewPager
        android:id="@id/id_stickynavlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>