<resources>
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorHint">@color/grey</item>

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--tab的最大的宽度--> <item name="tabMaxWidth">264dp</item>
        <!--tab指示标的颜色-->
        <item name="tabIndicatorColor">#f55a08</item>
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">2dp</item>
        <!--tab字体的样式-->
        <item name="tabTextAppearance">@style/MyTabTextStyle</item>
        <!--tab 选中时的颜色-->
        <item name="tabSelectedTextColor">#f55a08</item>
    </style>
    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <!--Tab字体的大小-->
        <item name="android:textSize">16dp</item>
        <!--Tab字体的默认的颜色-->
        <item name="android:textColor">#666666</item>
        <!--Tab字体是否为大写-->
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>



    <style name="homeGridText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
