<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/defaul_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tab_mycoupon"
        android:background="@color/white"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorColor="@color/orange"
        app:stl_indicatorThickness="4dp"
        app:stl_indicatorWidth ="55dp"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"

        app:stl_indicatorCornerRadius="2dp"
        app:stl_overlineColor="@color/white"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#d9d9d9"
        app:stl_underlineThickness="1dp"
        app:stl_dividerColor="@color/orange"
        app:stl_dividerThickness="2dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@color/selector_tab_mycoupon"
        app:stl_defaultTabTextSize="14sp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="true"
        app:stl_clickable="true"
        app:stl_titleOffset="24dp"
        app:stl_drawDecorationAfterTab="false"

        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <include layout="@layout/default_line"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mycoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>