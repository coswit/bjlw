<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/defaul_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/orange">

        <LinearLayout
            android:paddingRight="20dp"
            android:gravity="center"
            android:id="@+id/ll_register_revert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/orange"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_revert"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/et_register_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edt_bg"
            android:ellipsize="end"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="13sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_register_codes"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_bg"
                android:ellipsize="end"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="8"
                android:maxLines="1"
                android:textColor="#999999"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_register_sendcodes"
                android:layout_width="78dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rime_line_orange"
                android:text="获取验证码"
                android:textColor="#f55a08"
                android:textSize="13sp"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_register_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="设置登录密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="13sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_confirm"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_shape"
        android:text="注册并登录"
        android:textColor="@color/white"
        android:textSize="19dp"/>

    <LinearLayout
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ll_register_rebackLogin"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_reback_register"
            android:textColor="@color/default_textcolor"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="》"
            android:textSize="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="44dp"
        android:paddingRight="44dp"
        android:src="@drawable/wx_signin_text"/>

    <ImageView
        android:id="@+id/image_register_wx"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="18dp"
        android:src="@mipmap/ic_wx_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        android:text="微信"
        android:textColor="#4c4c4c"
        android:textSize="13sp"/>
</LinearLayout>