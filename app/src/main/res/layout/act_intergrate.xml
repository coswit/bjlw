<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/defaul_bg"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="3dp"
        android:paddingRight="@dimen/common_padding_size"
        android:paddingLeft="@dimen/common_padding_size"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="48dp">
        <TextView
            android:text="我的积分:"
            android:textStyle="bold"
            android:textColor="@color/default_textcolor"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_intergrateAct_total"
            android:paddingLeft="3dp"
            android:text="+100"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_intergrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>