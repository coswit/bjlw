<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:background="@color/defaul_bg"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/orange">

        <LinearLayout
            android:id="@+id/ll_login_revert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/orange"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_revert"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="20dp">

        <EditText
            android:inputType="text"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edt_bg"
            android:hint="手机号"
            android:textColor="#999999"
            android:textSize="13sp"/>

        <EditText
            android:inputType="textPassword"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="密码"
            android:textColor="#999999"
            android:textSize="13sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_login_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_shape"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="19dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/tv_loginAct_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="快速注册"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textSize="14sp"/>
    </LinearLayout>
    <ImageView
        android:paddingLeft="44dp"
        android:paddingRight="44dp"
        android:src="@drawable/wx_signin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="18dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
       android:layout_marginBottom="6dp"
        android:src="@mipmap/ic_wx_login"/>

    <TextView
        android:textColor="#4c4c4c"
        android:textSize="13sp"
        android:layout_marginBottom="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="微信"/>
</LinearLayout>