<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:layout_marginTop="0.5dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_padding_size"
    android:paddingRight="@dimen/common_padding_size">

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_intergrate"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="13dp">

        <TextView
            android:id="@+id/tv_item_intergrate_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="连续登陆十天"
            android:textColor="@color/default_textcolor"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView

            android:id="@+id/tv_item_intergrate_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingTop="3dp"
            android:text="长时间在线"
            android:textColor="@color/default_textcolor"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_intergrate_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+100"
            android:textColor="@color/orange"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="积分"
            android:textColor="@color/orange"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
